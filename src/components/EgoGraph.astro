---
type GraphDisplayData = import("../lib/genealogie").GraphDisplayData;
interface Props extends GraphDisplayData {
  pageIds?: string[];
}
const { central, sections, pageIds = [] } = Astro.props as Props;
const nonEmptySections = (sections || []).filter((section) => section.nodes && section.nodes.length > 0);

function getNatureLabel(node: any): string | null {
  if (node.display_class) return node.display_class;
  const n = node.nature;
  if (typeof n === "string") return n;
  if (n && typeof n === "object") {
    const { category, subtype } = n as { category?: string; subtype?: string };
    if (category && subtype) return `${category} — ${subtype}`;
    if (category) return category;
  }
  return null;
}
---

  <section class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-8 ego-detail-card">
  <div class="text-center space-y-2">
    <p class="text-xs uppercase tracking-[0.2em] text-gray-500">Personnage central</p>
    <h2 class="text-3xl font-bold text-gray-900">{central.name}</h2>
    <p class="text-sm text-gray-500">{central.culture}</p>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    {nonEmptySections.map((section) => (
      <div class="relation-card border border-gray-100 rounded-xl p-4 bg-gray-50/70">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-semibold text-gray-800">{section.title}</h3>
          <span class="text-xs text-gray-500">{section.nodes.length} entrée(s)</span>
        </div>

        <ul class="space-y-3">
          {section.nodes.map((node) => {
            const primarySource = node.sources?.[0];
            return (
              <li class="relation-node p-4 bg-white rounded-lg border border-gray-200 shadow-sm text-sm">
                <div class="flex items-start justify-between gap-3">
                  <div>
                    <p class="font-semibold text-gray-900">{node.name}</p>
                    {node.display_class || node.nature ? (
                      <span class="nature-badge">{getNatureLabel(node)}</span>
                    ) : null}
                  </div>
                  {pageIds.includes(node.id) ? (
                    <a
                      href={`/entites/${node.id}/`}
                      class="inline-flex items-center rounded-full border border-gray-200 px-3 py-1 text-xs font-semibold text-indigo-700 hover:border-indigo-300 hover:bg-indigo-50 transition"
                    >
                      Voir la fiche
                    </a>
                  ) : null}
                </div>

                {node.variant && (
                  <p class="text-gray-600 text-sm mt-2">
                    <span class="font-medium">Variante :</span> {node.variant}
                  </p>
                )}

                {primarySource && (
                  <p class="text-xs text-gray-500 mt-2">
                    Source : {primarySource.author}, {primarySource.work}
                    {primarySource.note ? ` — ${primarySource.note}` : ''}
                  </p>
                )}
              </li>
            );
          })}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .nature-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.65rem;
    border-radius: 9999px;
    background: #f8f1e7;
    color: #8b5a2b;
    font-size: 0.8rem;
    font-weight: 600;
    border: 1px solid rgba(139, 90, 43, 0.22);
  }

  :global(.theme-dark .ego-detail-card) {
    background: rgba(8, 12, 26, 0.92);
    border-color: rgba(255, 255, 255, 0.12);
    color: #e2e8f0;
  }
  :global(.theme-dark .ego-detail-card h2),
  :global(.theme-dark .ego-detail-card h3) {
    color: #e5e7eb;
  }
  :global(.theme-dark .ego-detail-card a) {
    color: #a5bdfd;
  }
  :global(.theme-dark .ego-detail-card a:hover) {
    color: #c7d6ff;
  }
  :global(.theme-dark .ego-detail-card li),
  :global(.theme-dark .ego-detail-card p) {
    color: #cbd5e1;
  }
  :global(.theme-dark .ego-detail-card .relation-card) {
    background: rgba(17, 24, 39, 0.6);
    border-color: rgba(255, 255, 255, 0.16);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
  }
  :global(.theme-dark .ego-detail-card .relation-node) {
    background: rgba(13, 19, 33, 0.95);
    border-color: rgba(255, 255, 255, 0.12);
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.38);
  }
  :global(.theme-dark .ego-detail-card .relation-node:hover) {
    border-color: rgba(255, 255, 255, 0.2);
  }
  :global(.theme-dark .ego-detail-card .relation-node .text-gray-900) {
    color: #e5e7eb;
  }
  :global(.theme-dark .ego-detail-card .relation-node .text-gray-500),
  :global(.theme-dark .ego-detail-card .relation-node .text-gray-600) {
    color: #cbd5e1;
  }
  :global(.theme-dark .ego-detail-card .nature-badge) {
    background: #3a2f23;
    color: #f6e7d0;
    border-color: rgba(246, 231, 208, 0.35);
  }
</style>
