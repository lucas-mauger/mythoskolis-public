---
interface Props {
  initialSlug: string;
}

const { initialSlug } = Astro.props as Props;
const componentId = `ego-graph-${initialSlug}`;
const clientModule = (await import('./ego-graph-interactive-client.ts?url')) as { default: string };
const clientScriptSrc = clientModule.default;
---

<section class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-4">
  <div class="relative border border-dashed border-indigo-100 rounded-2xl bg-indigo-50/50 overflow-hidden flex justify-center">
    <div
      id={componentId}
      class="ego-graph-sky relative"
      aria-live="polite"
      data-ego-graph
      data-initial-slug={initialSlug}
    >
      <div class="ego-graph-grid" aria-hidden="true">
        <div class="ego-quadrant" data-quadrant="parents">
          <span class="ego-quadrant-label">Parents</span>
          <div class="ego-quadrant-content" data-section="parents"></div>
        </div>
        <div class="ego-quadrant" data-quadrant="siblings">
          <span class="ego-quadrant-label align-right">Fratrie</span>
          <div class="ego-quadrant-content" data-section="siblings"></div>
        </div>
        <div class="ego-quadrant" data-quadrant="consorts">
          <span class="ego-quadrant-label">Consorts</span>
          <div class="ego-quadrant-content" data-section="consorts"></div>
        </div>
        <div class="ego-quadrant" data-quadrant="children">
          <span class="ego-quadrant-label align-right">Enfants</span>
          <div class="ego-quadrant-content" data-section="children"></div>
        </div>
      </div>
      <div class="ego-graph-message">Chargement du grapheâ€¦</div>
    </div>
  </div>
</section>

<style is:global>
  .ego-graph-sky {
    position: relative;
    width: min(80vw, 1100px);
    aspect-ratio: 16 / 9;
    border-radius: 1.5rem;
    overflow: hidden;
    padding: 0;
    background: transparent;
  }

  .ego-graph-sky::before,
  .ego-graph-sky::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    height: 800px;
    background: transparent;
    pointer-events: none;
  }

  .ego-graph-sky::before {
    top: -800px;
  }

  .ego-graph-sky::after {
    bottom: -800px;
  }

  .ego-graph-grid {
    position: absolute;
    inset: 0;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-template-rows: repeat(2, minmax(0, 1fr));
    gap: 1.25rem;
    padding: 1.25rem;
    z-index: 1;
  }

  .ego-quadrant {
    position: relative;
    border-radius: 1.5rem;
    border: 1px dashed rgba(129, 140, 248, 0.4);
    background: rgba(255, 255, 255, 0.75);
    box-shadow: inset 0 1px 2px rgba(15, 23, 42, 0.08);
    overflow: hidden;
  }

  .ego-quadrant-label {
    position: absolute;
    top: 0.75rem;
    left: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.2rem 0.75rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: rgb(79 70 229);
    background: #fff;
    border-radius: 9999px;
    border: 1px solid rgba(79, 70, 229, 0.2);
    box-shadow: 0 4px 10px rgba(79, 70, 229, 0.12);
  }

  .ego-quadrant-label.align-right {
    left: auto;
    right: 1rem;
  }

  .ego-quadrant-content {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 2.25rem 1.25rem 1.25rem;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    grid-auto-rows: 120px;
    gap: 1rem;
    align-items: center;
    justify-items: center;
    align-content: flex-start;
    pointer-events: auto;
    overflow-y: auto;
    overscroll-behavior: contain;
    scrollbar-width: none;
    cursor: grab;
  }
  .ego-quadrant-content.is-dragging {
    cursor: grabbing;
  }
  .ego-quadrant-content::before,
  .ego-quadrant-content::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    height: 2.5rem;
    pointer-events: none;
    opacity: 0;
    transition: opacity 150ms ease;
    z-index: 3;
  }
  .ego-quadrant-content::before {
    top: 0;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0));
  }
  .ego-quadrant-content::after {
    bottom: 0;
    background: linear-gradient(0deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0));
  }
  .ego-quadrant-content.has-more-top::before {
    opacity: 1;
  }
  .ego-quadrant-content.has-more-bottom::after {
    opacity: 1;
  }
  .ego-quadrant-content::-webkit-scrollbar {
    display: none;
  }

  .ego-link {
    stroke: rgba(99, 102, 241, 0.4);
  }

  .ego-node {
    position: relative;
    width: 75px;
    height: 75px;
    transition: transform 250ms ease-out, opacity 200ms ease-out;
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
  }

  .ego-node button {
    transition: box-shadow 150ms ease, border-color 150ms ease, transform 150ms ease;
    background-color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 9999px;
    padding: 0.75rem;
    box-shadow: 0 1px 2px rgba(15, 23, 42, 0.08);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  .ego-node[data-role="central"] button {
    border-color: rgb(129 140 248);
    box-shadow: 0 10px 15px rgba(99, 102, 241, 0.15);
    font-weight: 600;
    color: rgb(17 24 39);
  }

  .ego-node[data-role="central"] {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 150px;
    height: 150px;
    gap: 0.4rem;
    z-index: 4;
  }

  .ego-node[data-role="central"] button:focus-visible {
    outline: 2px solid rgb(129 140 248);
    outline-offset: 2px;
  }

  .ego-node button:hover {
    border-color: rgb(165 180 252);
    box-shadow: 0 15px 20px rgba(99, 102, 241, 0.2);
  }

  .ego-node button:focus-visible {
    outline: 2px solid rgb(129 140 248);
    outline-offset: 2px;
  }

  .ego-node-role {
    display: none;
  }

  .ego-node-label {
    margin-top: -0.4rem;
    background: rgba(255, 255, 255, 0.92);
    border: 1px solid rgba(79, 70, 229, 0.2);
    border-radius: 9999px;
    padding: 0.3rem 0.9rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgb(17 24 39);
    box-shadow: 0 2px 6px rgba(15, 23, 42, 0.12);
    text-transform: none;
    letter-spacing: normal;
    pointer-events: none;
  }

  .ego-node[data-role="central"] .ego-node-label {
    margin-top: 0;
  }

  .ego-node-role {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgb(79 70 229);
    display: block;
    margin-bottom: 0.2rem;
  }

  .ego-node-variant {
    font-size: 0.75rem;
    color: rgb(107 114 128);
    margin-top: 0.25rem;
  }

  .ego-node-sources {
    font-size: 0.7rem;
    color: rgb(156 163 175);
    margin-top: 0.4rem;
  }

  .ego-node.is-visible {
    opacity: 1;
  }

  .ego-node.is-leaving {
    opacity: 0;
  }

  .ego-graph-message {
    min-height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    color: rgb(75 85 99);
    text-align: center;
    padding: 1.25rem;
    position: sticky;
    top: 0;
    z-index: 3;
  }

  @media (max-width: 640px) {
    .ego-graph-sky {
      width: auto;
      height: 80vh;
      aspect-ratio: 9 / 16;
      margin: 0 auto;
    }

    .ego-graph-sky::before,
    .ego-graph-sky::after {
      height: 0;
    }

    .ego-graph-grid {
      gap: 0.75rem;
      padding: 0.75rem;
    }

    .ego-quadrant-content {
      padding: 1.6rem 0.5rem 0.75rem;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      grid-auto-rows: 105px;
      gap: 0.75rem;
    }

    .ego-node {
      width: 65px;
      height: 65px;
    }

    .ego-node[data-role="central"] {
      width: 130px;
      height: 130px;
    }

    .ego-node-label {
      font-size: 0.85rem;
    }

    .ego-quadrant-label {
      font-size: 0.7rem;
    }

    .ego-quadrant-label.align-right {
      right: 0.75rem;
    }
  }
</style>

