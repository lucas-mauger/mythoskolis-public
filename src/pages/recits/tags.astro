---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MetaTags from '../../components/MetaTags.astro';
import '../../styles/global.css';
import { getEntry, getCollection } from 'astro:content';
import { normalizeTagForSearch } from '../../utils/tags';

const tagEntry = await getEntry('data', 'tags-recits');
const recits = await getCollection('recits');

const tagCounts = new Map<string, number>();
recits.forEach((recit) => {
  const tags = Array.isArray(recit?.data?.tags) ? recit.data.tags : [];
  tags.forEach((id) => tagCounts.set(id, (tagCounts.get(id) ?? 0) + 1));
});

const categories = (tagEntry?.data?.categories || []).map((cat) => ({
  ...cat,
  tags: (cat.tags || []).filter((t) => (tagCounts.get(t.id) ?? 0) > 0),
})).filter((cat) => cat.tags.length > 0);
const pageTitle = "Thématiques des récits | Mythoskolis";
const pageDescription = "Liste des thèmes utilisés pour classifier les récits mythologiques.";
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={pageTitle}
    description={pageDescription}
    canonical="/recits/tags/"
    type="website"
  />
</head>

<body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
  <Header />

  <main class="flex-1 max-w-4xl mx-auto px-4 py-12 space-y-8">
    <header class="space-y-2">
      <p class="mk-kicker">Récits</p>
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-50">Thématiques des récits</h1>
      <p class="text-base text-slate-700 dark:text-slate-200">Thèmes et motifs utilisés pour filtrer les récits.</p>
    </header>

    <section class="space-y-6">
      {categories.map((cat) => (
        <div class="mk-card space-y-3 p-4 md:p-5">
          <h2 class="mk-card-title mb-1">{cat.label}</h2>
          <div class="flex flex-wrap gap-2">
            {cat.tags.map((t) => (
              <a
                class="mk-pill text-sm hover:-translate-y-[1px] hover:shadow-sm"
                href={`/recits/?tag=${encodeURIComponent(normalizeTagForSearch(t.label))}`}
              >
                {t.label}
                <span class="ml-2 inline-flex min-w-[1.6rem] items-center justify-center rounded-full bg-slate-200 px-2 py-0.5 text-xs font-bold text-slate-700 dark:bg-slate-700 dark:text-slate-100">
                  {tagCounts.get(t.id) ?? 0}
                </span>
              </a>
            ))}
          </div>
        </div>
      ))}
    </section>
  </main>

  <Footer />
</body>
</html>
