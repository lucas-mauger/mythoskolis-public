---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MetaTags from '../components/MetaTags.astro';
import '../styles/global.css';
import { getEntryBySlug } from 'astro:content';

const page = await getEntryBySlug('pages', 'a-propos');
if (!page) {
  throw new Error("Contenu 'a-propos' introuvable");
}
const { Content, headings } = await page.render();
const toc = (headings ?? []).filter((h) => h.depth === 2 || h.depth === 3);
const metaTitle = `${page.data.title} | Mythoskolis`;
const metaDescription =
  page.data.description ||
  "Philosophie du projet Mythoskolis : médiation culturelle, mythes et expérimentation visuelle.";

const introMd = page.data.intro ?? "";
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={metaTitle}
    description={metaDescription}
    canonical="/a-propos/"
    type="website"
  />
</head>

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <Header />

    <main class="flex-1 max-w-4xl mx-auto px-4 py-12 space-y-8">
      <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-50">{page.data.title}</h1>

      {introMd.trim() ? (
        <section class="mk-prose-card max-w-none p-6 md:p-8" set:html={introMd}></section>
      ) : null}

      {toc.length ? (
        <nav class="mk-card-strong p-4 text-sm text-slate-700 dark:text-slate-200">
          <p class="mb-3 text-lg font-semibold text-slate-900 dark:text-slate-50">Sommaire</p>
          <ul class="space-y-2">
            {toc.map((h) => (
              <li class={h.depth === 3 ? 'pl-4 text-slate-600 dark:text-slate-300' : ''}>
                <a class="text-slate-700 hover:text-slate-900 dark:text-slate-200 dark:hover:text-slate-100" href={`#${h.slug}`}>{h.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      ) : null}

      <section class="mk-prose-card max-w-none mt-4 p-0">
        <Content />
      </section>
    </main>

    <Footer />
  </body>
</html>
