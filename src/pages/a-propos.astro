---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MetaTags from '../components/MetaTags.astro';
import '../styles/global.css';
import { getEntryBySlug } from 'astro:content';

const page = await getEntryBySlug('pages', 'a-propos');
if (!page) {
  throw new Error("Contenu 'a-propos' introuvable");
}
const { Content } = await page.render();
const metaTitle = `${page.data.title} | Mythoskolis`;
const metaDescription =
  page.data.description ||
  "Philosophie du projet Mythoskolis : médiation culturelle, mythes et expérimentation visuelle.";
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={metaTitle}
    description={metaDescription}
    canonical="/a-propos/"
    type="website"
  />
</head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <Header />

    <main class="flex-1 max-w-3xl mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold mb-8">{page.data.title}</h1>

      <section class="prose prose-gray prose-lg max-w-none">
        <Content />
      </section>
    </main>

    <Footer />
  </body>
</html>
