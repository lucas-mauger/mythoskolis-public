---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MetaTags from '../../components/MetaTags.astro';
import '../../styles/global.css';
import { getCollection } from 'astro:content';

const ressources = await getCollection('ressources');
const sorted = ressources.slice().sort((a, b) => a.data.title.localeCompare(b.data.title, 'fr', { sensitivity: 'base' }));
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title="Ressources | Mythoskolis"
    description="Analyses, sources antiques et fiches pédagogiques pour explorer la mythologie."
    canonical="/ressources/"
    type="website"
  />
</head>

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <Header />

    <main class="flex-1 max-w-4xl mx-auto px-4 py-12 space-y-8">
      <div class="space-y-3">
        <p class="mk-kicker">Ressources</p>
        <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-50">Ressources pédagogiques</h1>
        <p class="mk-lead max-w-4xl text-slate-500 dark:text-slate-300">
          Textes antiques, guides de lecture et fiches pédagogiques pour explorer la mythologie.
        </p>
      </div>

      {sorted.length === 0 ? (
        <p class="text-slate-600 dark:text-slate-300">Aucune ressource n'est encore disponible.</p>
      ) : (
        <div class="grid gap-4 sm:grid-cols-2">
          {sorted.map((res) => (
            <a
              href={`/ressources/${res.slug}/`}
              class="mk-card block rounded-xl p-5 shadow-sm hover:shadow-md transition dark:hover:shadow-lg"
            >
              <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-50">{res.data.title}</h2>
              <p class="text-sm text-slate-600 dark:text-slate-300 mt-2">{res.data.description}</p>
            </a>
          ))}
        </div>
      )}
    </main>

    <Footer />
  </body>
</html>
