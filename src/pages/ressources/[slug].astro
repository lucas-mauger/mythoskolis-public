---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MetaTags from '../../components/MetaTags.astro';
import '../../styles/global.css';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const ressources = await getCollection('ressources');
  return ressources.flatMap((res) => {
    const frontmatterSlug = res.data.slug;
    const canonicalSlug = frontmatterSlug || res.slug;

    const entries = [
      {
        params: { slug: canonicalSlug },
        props: { ressource: res, canonicalSlug },
      },
    ];

    // Conserve l'ancien slug dérivé du nom de fichier pour éviter de casser des liens existants.
    if (frontmatterSlug && frontmatterSlug !== res.slug) {
      entries.push({
        params: { slug: res.slug },
        props: { ressource: res, canonicalSlug },
      });
    }

    return entries;
  });
}

const { ressource, canonicalSlug } = Astro.props;
const { Content } = await ressource.render();
const pageTitle = `${ressource.data.title} | Mythoskolis`;
const pageDescription = ressource.data.description ?? ressource.data.title;
const slugForPath = canonicalSlug ?? ressource.data.slug ?? ressource.slug;
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={pageTitle}
    description={pageDescription}
    canonical={`/ressources/${slugForPath}/`}
    type="article"
  />
</head>

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <Header />

    <main class="flex-1 max-w-4xl mx-auto px-4 py-12">
      <article class="mk-prose-card p-6 md:p-8"><Content /></article>
    </main>

    <Footer />
  </body>
</html>
