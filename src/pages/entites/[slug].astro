---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MetaTags from '../../components/MetaTags.astro';
import '../../styles/global.css';
import { getCollection, getEntry } from 'astro:content';
import EgoGraph from '../../components/EgoGraph.astro';
import { getGraphDisplayData, getEntityById, getEntityBySlug } from '../../lib/genealogie';
import { getRecitsForEntity } from '../../utils/recits';
import { getGlossaryEntries } from '../../lib/glossaire';
import ContextualLayerScript from '../../components/ContextualLayerScript.astro';
import fs from 'node:fs';
import path from 'node:path';
import { fileURLToPath } from 'node:url';
import { isPublishedEntry } from '../../utils/content-filters';

export async function getStaticPaths() {
  const all = await getCollection('entites', isPublishedEntry);
  return all.map((entry) => ({
    params: { slug: entry.data.id ?? entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const {
  id: frontId,
  culture: frontCulture,
  title,
  description,
  image,
  role,
  domains,
  symbols,
  gender,
} = entry.data;
const { Content, headings } = await entry.render();
const entityId = (frontId ?? entry.data.id ?? entry.slug).toString();
const allEntries = await getCollection('entites', isPublishedEntry);
const pageIds = allEntries.map((e) => (e.data.id ?? e.slug).toString());
const yamlEntity = getEntityById(entityId) ?? getEntityBySlug(entityId) ?? getEntityBySlug(entry.slug);
const genealogie = getGraphDisplayData(entityId);
const hasGenealogie = Boolean(genealogie?.central?.id);
const entityCulture = (frontCulture ?? yamlEntity?.culture ?? 'grecque').toString();
const recitsAssocies = await getRecitsForEntity(entityId);
const glossaryEntries = getGlossaryEntries();

// Resolve project root from this file (/src/pages/entites/[slug].astro -> up 3 levels)
const projectRoot = fileURLToPath(new URL('../../..', import.meta.url));
const publicDir = path.join(projectRoot, 'public');

const faceForId = (id: string | undefined | null) => {
  if (!id) return null;
  const rel = path.join('faces', 'grecque', `${id}.webp`);
  const full = path.join(publicDir, rel);
  return fs.existsSync(full) ? '/' + rel.replace(/\\/g, '/') : null;
};
const entityLayerEntries =
  allEntries
    .map((e) => {
      const id = (e.data.id ?? e.slug).toString();
      const title = e.data.title?.toString().trim();
      if (!title) return null;
      return {
        type: 'entity',
        name: title,
        title,
        role: e.data.role?.toString() ?? '',
        image: faceForId(id),
      };
    })
    .filter(Boolean) ?? [];
const layerEntries = [
  ...glossaryEntries.map((g) => ({ type: 'glossary', name: g.name, definition: g.definition })),
  ...entityLayerEntries,
];

const videoSrc =
  ensurePublicPath(entry.data.video) ??
  findFirstExistingFromList(buildMediaBases('videos'), ['mp4', 'webm', 'ogg', 'ogv']);
const videoType = videoSrc ? getMimeFromExt(videoSrc) : null;

const imageSrc =
  ensurePublicPath(image) ??
  findFirstExistingFromList(buildMediaBases('images'), ['webp', 'jpg', 'jpeg', 'png']) ??
  findFallbackUnknown(gender);

const isGrecPantheon = (yamlEntity?.culture ?? entry.data.culture ?? entityCulture) === 'grecque';
const natureLabel = getNatureLabel(yamlEntity, entry.data);
const natureBadgesRaw = Array.from(
  new Set(
    [
      ...(Array.isArray(entry.data.nature) ? entry.data.nature : entry.data.nature ? [entry.data.nature] : []),
      ...(Array.isArray(yamlEntity?.nature) ? (yamlEntity?.nature as any[]).map((n) => (typeof n === 'string' ? n : n?.category ?? n?.subtype).toString()).filter(Boolean) : []),
    ]
      .map((n) => (n ?? '').toString().trim())
      .filter(Boolean),
  ),
);
const natureEntry = await getEntry('data', 'natures-entites');
const natureLabelMap = new Map<string, { fr?: Record<string, string> }>();
natureEntry?.data?.natures?.forEach((n) => {
  natureLabelMap.set(n.id, { fr: n.labels?.fr ?? {} });
});
natureEntry?.data?.natures?.forEach((n) => {
  const fr = n.labels?.fr ?? {};
});

function getNatureLabelFromList(natureId: string, gender?: string): string {
  const labels = natureLabelMap.get(natureId)?.fr;
  if (!labels) return natureId;
  const g = (gender ?? 'x').toLowerCase();
  return labels[g] ?? labels.x ?? labels.f ?? labels.m ?? natureId;
}

const natureBadges = natureBadgesRaw.map((n) => ({
  id: n,
  label: getNatureLabelFromList(n, gender),
}));

const tocHeadings = (headings ?? []).filter((h) => h.depth === 2 || h.depth === 3);
const tocExtras: { slug: string; text: string }[] = [];
if (hasGenealogie) tocExtras.push({ slug: 'genealogie-detaillee', text: 'Généalogie détaillée' });
if (recitsAssocies.length > 0) tocExtras.push({ slug: 'recits-associes', text: 'Récits associés' });
const toc = [...tocHeadings, ...tocExtras];

function buildMediaBases(kind: 'images' | 'videos') {
  const bases: string[] = [];
  bases.push(`${kind}/${entityCulture}/${entityId}`);
  bases.push(`${kind}/${entityCulture}/${entry.slug}`);
  bases.push(`${kind}/${entityId}`);
  bases.push(`${kind}/${entry.slug}`);
  return bases;
}

function findFirstExisting(baseWithoutExt: string, extensions: string[]): string | null {
  // try exact casing first
  for (const ext of extensions) {
    const rel = baseWithoutExt.includes('.') ? baseWithoutExt : `${baseWithoutExt}.${ext}`;
    const relPath = rel.startsWith('/') ? rel.slice(1) : rel;
    const full = path.join(publicDir, relPath);
    if (fs.existsSync(full)) {
      return '/' + relPath.replace(/\\/g, '/');
    }
  }
  // fallback: case-insensitive scan in the target directory
  const dir = path.dirname(baseWithoutExt);
  const baseName = path.basename(baseWithoutExt).toLowerCase();
  const dirPath = path.join(publicDir, dir.startsWith('/') ? dir.slice(1) : dir);
  if (!fs.existsSync(dirPath)) return null;
  const candidates = fs.readdirSync(dirPath);
  const match = candidates.find((file) => {
    const lowered = file.toLowerCase();
    return extensions.some((ext) => lowered === `${baseName}.${ext}`);
  });
  if (match) {
    const rel = path.join(dir, match);
    const relPath = rel.startsWith('/') ? rel.slice(1) : rel;
    return '/' + relPath.replace(/\\/g, '/');
  }
  return null;
}

function findFirstExistingFromList(bases: string[], extensions: string[]): string | null {
  for (const base of bases) {
    const found = findFirstExisting(base, extensions);
    if (found) return found;
  }
  return null;
}

function findFallbackUnknown(gender?: string): string | null {
  const normalized = gender?.toString().toLowerCase();
  const byGender: Record<string, string> = {
    m: 'images/grecque/grecque-unknown_m.webp',
    male: 'images/grecque/grecque-unknown_m.webp',
    masculin: 'images/grecque/grecque-unknown_m.webp',
    f: 'images/grecque/grecque-unknown_f.webp',
    femelle: 'images/grecque/grecque-unknown_f.webp',
    fem: 'images/grecque/grecque-unknown_f.webp',
    female: 'images/grecque/grecque-unknown_f.webp',
    feminin: 'images/grecque/grecque-unknown_f.webp',
    autre: 'images/grecque/grecque-unknown_x.webp',
    other: 'images/grecque/grecque-unknown_x.webp',
    x: 'images/grecque/grecque-unknown_x.webp',
  };
  const prioritized: string[] = [];
  if (normalized && byGender[normalized]) {
    prioritized.push(byGender[normalized]);
  }
  const candidates = [
    ...prioritized,
    'images/grecque/grecque-unknown_m.webp',
    'images/grecque/grecque-unknown_f.webp',
    'images/grecque/grecque-unknown_x.webp',
    'images/unknown_m.webp',
    'images/unknown_f.webp',
    'images/unknown_x.webp',
  ];
  for (const rel of candidates) {
    const full = path.join(publicDir, rel);
    if (fs.existsSync(full)) {
      return '/' + rel;
    }
  }
  const fallbackSvg = encodeURI(
    `<svg xmlns="http://www.w3.org/2000/svg" width="800" height="1200" viewBox="0 0 800 1200" fill="none"><rect width="800" height="1200" rx="40" fill="#E2E8F0"/><text x="50%" y="52%" dominant-baseline="middle" text-anchor="middle" fill="#475569" font-family="Arial, sans-serif" font-size="96">?</text></svg>`
  );
  return `data:image/svg+xml;utf8,${fallbackSvg}`;
}

function getMimeFromExt(filePath: string): string | null {
  const ext = filePath.split('.').pop()?.toLowerCase();
  if (!ext) return null;
  switch (ext) {
    case 'mp4':
      return 'video/mp4';
    case 'webm':
      return 'video/webm';
    case 'ogg':
    case 'ogv':
      return 'video/ogg';
    default:
      return null;
  }
}

function ensurePublicPath(relPath: string | undefined): string | null {
  if (!relPath) return null;
  const cleaned = relPath.startsWith('/') ? relPath.slice(1) : relPath;
  const full = path.join(publicDir, cleaned);
  if (fs.existsSync(full)) {
    return '/' + cleaned.replace(/\\/g, '/');
  }
  return null;
}

function getNatureLabel(
  yamlEntity: ReturnType<typeof getEntityBySlug> | undefined,
  frontmatter: Record<string, any>,
): string | null {
  const fromYamlDisplay = yamlEntity?.display_class;
  if (fromYamlDisplay) return fromYamlDisplay;
  const yamlNature = yamlEntity?.nature;
  if (typeof yamlNature === 'string') return yamlNature;
  if (yamlNature && typeof yamlNature === 'object') {
    const { category, subtype } = yamlNature as { category?: string; subtype?: string };
    if (category && subtype) return `${category} — ${subtype}`;
    if (category) return category;
  }
  const fmDisplay = frontmatter.display_class;
  if (fmDisplay) return fmDisplay as string;
  const fmNature = frontmatter.nature;
  if (typeof fmNature === 'string') return fmNature;
  if (fmNature && typeof fmNature === 'object') {
    const { category, subtype } = fmNature as { category?: string; subtype?: string };
    if (category && subtype) return `${category} — ${subtype}`;
    if (category) return category;
  }
  return null;
}
