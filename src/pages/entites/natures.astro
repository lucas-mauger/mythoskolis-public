---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MetaTags from '../../components/MetaTags.astro';
import '../../styles/global.css';
import { getEntry, getCollection } from 'astro:content';
import { isPublishedEntry } from '../../utils/content-filters';

const natureEntry = await getEntry('data', 'natures-entites');
const entites = await getCollection('entites', isPublishedEntry);

const usedNatures = new Set<string>();
const natureCounts = new Map<string, number>();
entites.forEach((entite) => {
  const list = Array.isArray(entite?.data?.nature) ? entite.data.nature : [];
  list.forEach((id) => {
    usedNatures.add(id);
    natureCounts.set(id, (natureCounts.get(id) ?? 0) + 1);
  });
});

const natures = (natureEntry?.data?.natures ?? []).filter((n) => usedNatures.has(n.id));

const kindLabels: Record<string, string> = {
  divinite: 'Divinités',
  demi_dieu: 'Demi-dieux',
  mortel: 'Mortels',
  creature: 'Créatures',
};

function getDisplayLabel(nature: any): string {
  const fr = nature?.labels?.fr ?? {};
  return fr.x ?? fr.m ?? fr.f ?? Object.values(fr)[0] ?? nature.id;
}

const categories: Array<{ id: string; label: string; items: Array<{ id: string; label: string; count: number }> }> = [];
const map = new Map<string, { id: string; label: string; items: Array<{ id: string; label: string; count: number }> }>();

natures.forEach((nature) => {
  const kind = nature.kind ?? 'autre';
  if (!map.has(kind)) {
    const cat = { id: kind, label: kindLabels[kind] ?? kind, items: [] };
    map.set(kind, cat);
    categories.push(cat);
  }
  map.get(kind)?.items.push({
    id: nature.id,
    label: getDisplayLabel(nature),
    count: natureCounts.get(nature.id) ?? 0,
  });
});

const filteredCategories = categories
  .map((c) => ({ ...c, items: c.items.filter((i) => (natureCounts.get(i.id) ?? 0) > 0) }))
  .filter((c) => c.items.length > 0);

const pageTitle = 'Natures des entités | Mythoskolis';
const pageDescription = "Parcourez les natures d'entités (divinités, demi-dieux, mortels, créatures) pour filtrer rapidement.";
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={pageTitle}
    description={pageDescription}
    canonical="/entites/natures/"
    type="website"
  />
</head>

<body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
  <Header />

  <main class="flex-1 max-w-4xl mx-auto px-4 py-12 space-y-8">
    <header class="space-y-2">
      <p class="mk-kicker">Entités</p>
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-50">Natures des entités</h1>
      <p class="text-base text-slate-700 dark:text-slate-200">
        Catégories utilisées pour filtrer les entités (divinités, demi-dieux, mortels et créatures).
      </p>
    </header>

    <section class="space-y-6">
      {filteredCategories.map((cat) => (
        <div class="mk-card space-y-3 p-4 md:p-5">
          <div class="flex items-center justify-between gap-2">
            <h2 class="mk-card-title mb-0">{cat.label}</h2>
          </div>
          <div class="flex flex-wrap gap-2">
            {cat.items.map((item) => (
              <a
                class="mk-pill-amber inline-flex items-center gap-2 rounded-full p-1.5 pl-2.5 font-semibold text-sm hover:-translate-y-[1px] hover:shadow-sm"
                href={`/entites/?q=${encodeURIComponent(item.id)}`}
              >
                {item.label}
                <span class="ml-2 inline-flex min-w-[1.6rem] items-center justify-center rounded-full bg-slate-200 px-2 py-0.5 text-xs font-bold text-slate-700 dark:bg-slate-700 dark:text-slate-100">
                  {item.count}
                </span>
              </a>
            ))}
          </div>
        </div>
      ))}
    </section>
  </main>

  <Footer />
</body>
</html>
