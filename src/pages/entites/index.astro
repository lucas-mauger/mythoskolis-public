---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import { getCollection, getEntry } from 'astro:content';
import fs from 'node:fs';
import path from 'node:path';

const entites = await getCollection('entites');
const publicDir = path.resolve(process.cwd(), 'public');
const natureEntry = await getEntry('data', 'natures-entites');
const natureLabelMap = new Map<string, { fr?: Record<string, string> }>();
natureEntry?.data?.natures?.forEach((n) => {
  natureLabelMap.set(n.id, { fr: n.labels?.fr ?? {} });
});
const natureDisplayLabelMap: Record<string, string> = {};
natureEntry?.data?.natures?.forEach((n) => {
  natureLabelMap.set(n.id, { fr: n.labels?.fr ?? {} });
  const fr = n.labels?.fr ?? {};
  natureDisplayLabelMap[n.id] = fr.x ?? fr.m ?? fr.f ?? Object.values(fr)[0] ?? n.id;
});

function getNatureLabel(natureId: string, gender?: string): string {
  const labels = natureLabelMap.get(natureId)?.fr;
  if (!labels) return natureId;
  const g = (gender ?? 'x').toLowerCase();
  return labels[g] ?? labels.x ?? labels.f ?? labels.m ?? natureId;
}

function findFirstExistingFace(slug: string, id?: string, culture?: string): string | null {
  const normalizedCulture = culture?.toString().toLowerCase();
  const defaultCulture = 'grecque';
  const normalizedSlug = `${normalizedCulture ?? defaultCulture}-${slug}`;
  const bases: string[] = [];

  if (normalizedCulture) {
    if (id) bases.push(`faces/${normalizedCulture}/${id}`);
    bases.push(`faces/${normalizedCulture}/${normalizedSlug}`);
    bases.push(`faces/${normalizedCulture}/${slug}`);
  }
  if (id) bases.push(`faces/${defaultCulture}/${id}`);
  bases.push(`faces/${defaultCulture}/${normalizedSlug}`);
  bases.push(`faces/${defaultCulture}/${slug}`);
  if (id) bases.push(`faces/${id}`);
  bases.push(`faces/${slug}`);

  for (const base of bases) {
    const full = path.join(publicDir, `${base}.webp`);
    if (fs.existsSync(full)) {
      return '/' + `${base}.webp`;
    }
  }
  return null;
}
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>Entit√©s | Mythoskolis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <Header />

<main class="flex-1 max-w-5xl mx-auto px-4 py-12">
      <div class="mb-6 space-y-3">
        <h1 class="text-4xl font-bold">Les entit√©s de la mythologie grecque</h1>
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center">
          <input
            id="entite-filter"
            type="search"
            class="w-full sm:flex-1 rounded-xl border border-gray-200 bg-white px-4 py-2 text-sm shadow-sm focus:border-indigo-400 focus:ring-2 focus:ring-indigo-200 outline-none transition"
            placeholder="üîç Rechercher par nom ou nature (ex : olympien, primordiale...)"
            aria-label="Filtrer les entit√©s"
          />
          <a
            href="/entites/natures/"
            class="inline-flex items-center justify-center rounded-full border border-gray-200 bg-white px-4 py-2 text-sm font-semibold text-amber-800 shadow-sm transition hover:border-gray-300 hover:-translate-y-[1px] hover:shadow-md focus:outline-none focus:ring-2 focus:ring-amber-200/70 self-start sm:self-auto"
          >
            Voir les natures
          </a>
        </div>
      </div>

      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {entites.map((entite) => {
          const culture = entite.data.culture;
          const id = entite.data.id?.toString();
          const portrait = findFirstExistingFace(entite.slug, id, culture);
          const natures = Array.isArray(entite.data.nature) ? entite.data.nature : [];
          const natureLabels = natures.map((nature) => getNatureLabel(nature, entite.data.gender));
          const searchText = `${entite.data.title} ${entite.data.id ?? entite.slug} ${natures.join(' ')} ${natureLabels.join(' ')}`;

          const entityUrl = `/entites/${entite.data.id ?? entite.slug}/`;

          return (
            <article
              data-entite-card
              data-search={searchText.toLowerCase()}
              data-entity-url={entityUrl}
              class="entite-card flex items-start gap-4 p-4 bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-200"
              tabindex="0"
            >
              <div class="flex-1">
                <a href={entityUrl} class="entite-card-title text-xl font-semibold text-gray-900 hover:underline">
                  {entite.data.title}
                </a>
                {entite.data.role && <p class="entite-card-role text-gray-500 text-sm mt-1">{entite.data.role}</p>}
                {natures.length > 0 && (
                  <div class="mt-2 flex flex-wrap gap-2">
                    {natures.map((nature) => (
                      <a
                        href={`/entites/?q=${encodeURIComponent(nature)}`}
                        class="nature-pill inline-flex items-center rounded-full border border-amber-200 bg-amber-50 px-2.5 py-1 text-xs font-semibold text-amber-800 visited:text-amber-800 transition hover:border-amber-300 hover:-translate-y-[1px] hover:shadow-sm dark:border-slate-200/70 dark:bg-slate-800/90 dark:text-[#c68a3b] dark:visited:text-[#c68a3b] dark:hover:border-amber-300/70"
                      >
                        {getNatureLabel(nature, entite.data.gender)}
                      </a>
                    ))}
                  </div>
                )}
              </div>
              {portrait && (
                <img
                  src={portrait}
                  alt={entite.data.title}
                  class="w-20 h-20 rounded-2xl object-cover border border-gray-200 entite-card-image shadow-inner flex-shrink-0 select-none self-center"
                  draggable="false"
                  loading="lazy"
                />
              )}
            </article>
          );
        })}
</section>
  </main>

  <Footer />
</body>
</html>

<style>
  :global(.theme-dark .entite-card) {
    background: #0f172a;
    border-color: rgba(226, 232, 240, 0.5);
    border-width: 2px !important;
  }
  :global(.theme-dark .entite-card-title) {
    color: #f8fafc;
  }
  :global(.theme-dark .entite-card-role) {
    color: #cbd5e1;
  }
  :global(.theme-dark .entite-card-image) {
    border-color: rgba(148, 163, 184, 0.4);
  }
  :global(.theme-dark .nature-pill) {
    color: #c68a3b !important;
    background: rgba(30, 41, 59, 0.9) !important;
    border-color: rgba(217, 119, 6, 0.7) !important;
  }
  :global(.theme-dark .nature-pill:hover) {
    border-color: rgba(234, 179, 8, 0.8) !important;
  }
  :global(html:not(.theme-dark) .nature-pill) {
    color: #7a4f27;
    background: #f4e7d0;
    border-color: rgba(214, 185, 156, 0.7);
  }
  :global(.theme-dark #entite-filter) {
    background: rgba(15, 23, 42, 0.9);
    border-color: rgba(148, 163, 184, 0.5);
    color: #e5e7eb;
  }
</style>

<script type="application/json" id="nature-label-map" set:html={JSON.stringify(natureDisplayLabelMap)}></script>

<script>
  const input = document.getElementById('entite-filter');
  const cards = Array.from(document.querySelectorAll('[data-entite-card]'));

  const natureLabelMap = JSON.parse(document.getElementById('nature-label-map')?.textContent || '{}');
  const normalize = (str) => str.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');

  const filterCards = (value) => {
    const tokens = normalize(value).split(/\s+/).filter(Boolean);
    cards.forEach((card) => {
      const haystack = card.dataset.search ? normalize(card.dataset.search) : '';
      const ok = tokens.every((t) => haystack.includes(t));
      card.style.display = ok ? '' : 'none';
    });
  };

  input?.addEventListener('input', (e) => {
    filterCards(e.target.value || '');
  });

  const params = new URLSearchParams(window.location.search);
  const initial = params.get('q') || '';
  if (initial && input) {
    const display = natureLabelMap[initial] || initial;
    input.value = display;
    filterCards(initial);
  }

  cards.forEach((card) => {
    const url = card.dataset.entityUrl;
    if (!url) return;
    const go = () => (window.location.href = url);
    card.addEventListener('click', go);
    card.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        go();
      }
    });
  });
</script>
