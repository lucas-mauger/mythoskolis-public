---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HoloGraphPlaceholder from '../../components/HoloGraphPlaceholder.astro';
import '../../styles/global.css';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import { getEntityById, getEntityBySlug } from '../../lib/genealogie';
import MetaTags from '../../components/MetaTags.astro';
import { isPublishedEntry } from '../../utils/content-filters';

interface Props {
  entry: CollectionEntry<'entites'>;
}

export async function getStaticPaths() {
  const entites = await getCollection('entites', isPublishedEntry);

  return entites.map((entry) => ({
    params: { slug: entry.data.id ?? entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as Props;
const centralId = (entry.data.id ?? entry.slug).toString();
const yamlEntity = getEntityById(centralId) ?? getEntityBySlug(centralId) ?? getEntityBySlug(entry.slug);
const entityName = yamlEntity?.name ?? entry.data.title;
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <MetaTags
    title={`Généalogie de ${entityName} | Mythoskolis`}
    description={`Arbre familial de ${entityName}: parents, fratrie, enfants et consorts.`}
    image={`/faces/${yamlEntity?.culture ?? entry.data.culture ?? 'grecque'}/${centralId}.webp`}
    canonical={`/genealogie/${centralId}/`}
    type="article"
  />
</head>

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <Header />

    <main class="flex-1 w-full max-w-4xl lg:max-w-6xl mx-auto px-4 lg:px-6 py-12 space-y-6">
      <div class="flex flex-wrap gap-3 text-sm">
        <a href="/" class="badge-link badge-link--neutral badge-link--back">Accueil</a>
      </div>

      <div>
        <p class="text-sm uppercase tracking-wide text-gray-500 dark:text-slate-300">HoloGraph — module propriétaire</p>
      </div>

      <HoloGraphPlaceholder entityName={entityName} />
    </main>

    <Footer />
  </body>
</html>
