---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EgoGraphInteractive from '../../components/EgoGraphInteractive.astro';
import '../../styles/global.css';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import { getEgoGraphById, getEntityById, getEntityBySlug } from '../../lib/genealogie';

interface Props {
  entry: CollectionEntry<'entites'>;
}

export async function getStaticPaths() {
  const entites = await getCollection('entites');

  return entites.map((entry) => ({
    params: { slug: entry.data.id ?? entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as Props;
const centralId = (entry.data.id ?? entry.slug).toString();
const yamlEntity = getEntityById(centralId) ?? getEntityBySlug(centralId) ?? getEntityBySlug(entry.slug);
const egoGraph = getEgoGraphById(centralId) ?? getEgoGraphById(entry.slug) ?? getEgoGraphById(yamlEntity?.id ?? '');
const hasData = Boolean(egoGraph);
const entityName = yamlEntity?.name ?? entry.data.title;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>Généalogie de {entityName} | Mythoskolis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <Header />

    <main class="flex-1 w-full max-w-4xl lg:max-w-6xl mx-auto px-4 lg:px-6 py-12 space-y-6">
      <div class="flex flex-wrap gap-3 text-sm">
        <a href="/" class="badge-link badge-link--neutral badge-link--back">Accueil</a>
        <a href={`/entites/${centralId}/`} class="badge-link badge-link--primary">Voir la fiche entité</a>
      </div>

      <div>
        <p class="text-sm uppercase tracking-wide text-gray-500">Généalogie</p>
        <h1 class="text-4xl font-bold">{entityName}</h1>
      </div>

      {hasData ? (
        <EgoGraphInteractive initialSlug={centralId} />
      ) : (
        <div class="rounded-2xl border border-dashed border-indigo-300 bg-indigo-50/60 p-6 text-indigo-900">
          <h2 class="text-2xl font-semibold mb-2">Cartographie en cours</h2>
          <p class="text-sm leading-relaxed">
            Les données généalogiques de <strong>{entityName}</strong> sont en train d’être consolidées. Cette page sera
            mise à jour dès que les relations familiales seront vérifiées et sourcées.
          </p>
          <p class="text-xs mt-4 text-indigo-700">
            Tu peux suivre la roadmap dans `docs/genealogie` pour voir quelles branches sont en cours d’ajout.
          </p>
        </div>
      )}
    </main>

    <Footer />
  </body>
</html>
